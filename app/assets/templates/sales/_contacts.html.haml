          %input#ncFirstName.form-control.form-escape{:placeholder => "First Name", :type => "text", "ng-model" => "editContactInfo.first_name"}
      .form-group
        %label.control-label.col-xs-3{:for => "ncLastName"} Last Name
        .col-xs-9
          %input#ncLastName.form-control.form-escape{:placeholder => "Last Name", :type => "text", "ng-model" => "editContactInfo.last_name"}
      .form-group
        %label.control-label.col-xs-3{:for => "ncEmail"} Email
        .col-xs-9
          %input#ncEmail.form-control.form-escape{:placeholder => "Email", :type => "email", "ng-model" => "editContactInfo.email"}
      .form-group
        %label.control-label.col-xs-3{:for => "ncPhone"} Phone
        .col-xs-9
          %input#ncPhone.form-control.form-escape{:placeholder => "Phone", :type => "tel", "ng-model" => "editContactInfo.phone"}
      .form-group
        %label.control-label.col-xs-3{:for => "ncPosition"} Position
        .col-xs-9
          %input#ncPosition.form-control.form-escape{:placeholder => "Position", :type => "text", "ng-model" => "editContactInfo.position"}
      .form-group
        %label.control-label.col-xs-3{:for => "ncNotes"} Notes
