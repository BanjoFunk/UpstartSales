.contacts-container.customer-info-container{"ng-controller" => "ContactsCtrl as control"}

  %button.btn.btn-danger#contact-cancel.customer-info-cancel.animated{'ng-show'=>"control.showContactForm", "contact-toggle"=>"control.toggleContactForm()"} cancel
  #new-contact-form.new-customer-info-form.animated{'ng-show'=>"control.showContactForm"}
    %h2.text-center create a new contact
    %form.form-horizontal{:novalidate => ""}
      .form-group
        %label.control-label.col-xs-3{:for => "ncFirstName"} First Name
        .col-xs-9
          %input#ncFirstName.form-control.form-escape{:placeholder => "First Name", :type => "text", "ng-model" => "newContactInfo.first_name"}
      .form-group
        %label.control-label.col-xs-3{:for => "ncLastName"} Last Name
        .col-xs-9
          %input#ncLastName.form-control.form-escape{:placeholder => "Last Name", :type => "text", "ng-model" => "newContactInfo.last_name"}
      .form-group
        %label.control-label.col-xs-3{:for => "ncEmail"} Email
        .col-xs-9
          %input#ncEmail.form-control.form-escape{:placeholder => "Email", :type => "email", "ng-model" => "newContactInfo.email"}
      .form-group
        %label.control-label.col-xs-3{:for => "ncPhone"} Phone
        .col-xs-9
          %input#ncPhone.form-control.form-escape{:placeholder => "Phone", :type => "tel", "ng-model" => "newContactInfo.phone"}
      .form-group
        %label.control-label.col-xs-3{:for => "ncPosition"} Position
        .col-xs-9
          %input#ncPosition.form-control.form-escape{:placeholder => "Position", :type => "text", "ng-model" => "newContactInfo.position"}
      .form-group
        %label.control-label.col-xs-3{:for => "ncNotes"} Notes
        .col-xs-9
          %textarea#ncNotes.form-control.form-escape{rows:"3", :placeholder => "Notes", "ng-model" => "newContactInfo.notes"}
      .form-group
        .col-xs-offset-3.col-xs-9
          %button.btn.btn-primary.animate-show{:type => "submit", "ng-click" => "newContact(newContactInfo)", "contact-toggle"=>"control.toggleContactForm()"} Add


  %button.btn.btn-danger.customer-info-cancel#contact-cancel.animated{'ng-show'=>"control.showEditContactForm", "contact-toggle"=>"control.toggleEditContactForm()"} cancel
  #edit-contact-form.new-customer-info-form.animated{'ng-show'=>"control.showEditContactForm"}
    %h2.text-center create a edit contact
    %form.form-horizontal{:novalidate => ""}
      .form-group
        %label.control-label.col-xs-3{:for => "ncFirstName"} First Name
