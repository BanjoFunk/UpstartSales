        %label.control-label.col-xs-3{:for => "nlAddress2"} Address 2
        .col-xs-9
          %input#nlAddress2.form-control.location-form-escape{:placeholder => "Address 2", :type => "text", "ng-model" => "editLocationInfo.address_2"}
      .form-group
        %label.control-label.col-xs-3{:for => "nlCity"} City
        .col-xs-9
          %input#nlCity.form-control.location-form-escape{:placeholder => "City", :type => "text", "ng-model" => "editLocationInfo.city"}
      .form-group
        %label.control-label.col-xs-3{:for => "nlState"} State
