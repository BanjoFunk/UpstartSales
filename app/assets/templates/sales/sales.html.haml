#navbar{'ng-include'=>"'navbar/show.html'"}
%alerts
.sales-tracker-container
  .row
    .col-md-12.text-center
      %h1{style: 'color:white; font-size:30px;'} Upstart Sales Tracker
      %button.btn.btn-primary.pull-right.customer-form-toggle.hidden-cust-form{style: "position:absolute; top:0; right:30px;", :tabindex=>1} New Customer
      .hidden-cust-form.input-group{style:'width:400px;position:absolute; top:0px; right:30px; display:none;'}
        %input.form-control#new-customer-name{"aria-describedby"=>"new-customer-name", :placeholder=>"Customer Name", :type => "text", :name => "newCustomerName", "ng-model"=>"newCustomerName"}
        %div.input-group-btn
          %button.btn.btn-primary{"ng-click"=>"addCustomer()", :type=>"submit"}
            &nbsp;Submit&nbsp;
          %button#cancel-customer-name.btn.btn-danger.customer-form-toggle{"aria-label" => 'cancel'}
            %span.glyphicon.glyphicon-remove
  .row
    .col-md-12
      .text-center.equal-columns-container
        .col-md-3.equal-column.well
          %h2 Idea
          #idea-sort.ui-sortable.connectedSortable
            .customers_container{"ng-repeat" => "customer in states['idea'] | orderBy:sort_position", "id"=>"{{customer.id}}"}
              .panel.panel-info.text-left
                .panel-heading
                  %h3.panel-title{"ng-click" => "toggleModal(customer)", style: 'display:inline; cursor:pointer;'}
                    {{customer.name}}
                  %span.pull-right.toggle-accordion{style:'cursor:pointer;'}
                    show
                .panel-body{:style => "display:none;"}
                  Panel content
        .col-md-3.equal-column.well
          %h2 Contact
          #contacted-sort.ui-sortable.connectedSortable
            .customers_container{"ng-repeat" => "customer in states['contacted'] | orderBy:sort_position", "id"=>"{{customer.id}}"}
              .panel.panel-info.text-left
                .panel-heading
                  %h3.panel-title{"ng-click" => "toggleModal(customer)", style: 'display:inline; cursor:pointer;'}
                    {{customer.name}}
                  %span.pull-right.toggle-accordion{style:'cursor:pointer;'}
                    show
                .panel-body{:style => "display:none;"}
                  Panel content
        .col-md-3.equal-column.well
          %h2 Negotiation
          #negotiation-sort.ui-sortable.connectedSortable
            .customers_container{"ng-repeat" => "customer in states['negotiation'] | orderBy:sort_position", "id"=>"{{customer.id}}"}
              .panel.panel-info.text-left
                .panel-heading
                  %h3.panel-title{"ng-click" => "toggleModal(customer)", style: 'display:inline; cursor:pointer;'}
                    {{customer.name}}
                  %span.pull-right.toggle-accordion{style:'cursor:pointer;'}
                    show
                .panel-body{:style => "display:none;"}
                  Panel content
        .col-md-3.equal-column.well
          %h2 Active
          #active-sort.ui-sortable.connectedSortable
            .customers_container{"ng-repeat" => "customer in states['active'] | orderBy:sort_position", "id"=>"{{customer.id}}"}
              .panel.panel-info.text-left
                .panel-heading
                  %h3.panel-title{"ng-click" => "toggleModal(customer)", style: 'display:inline; cursor:pointer;'}
                    {{customer.name}}
                  %span.pull-right.toggle-accordion{style:'cursor:pointer;'}
                    show
                .panel-body{:style => "display:none;"}
                  Panel content
